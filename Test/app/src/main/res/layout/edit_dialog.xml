<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Rental"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#00BCD4"/>

    <EditText
        android:id="@+id/edtCarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:hint="Enter car name"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtRentalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:hint="Enter rental price"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtRentalLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:hint="Enter rental location"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of car"
        android:textSize="26sp"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/spnCarType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="26sp" />
    <ImageView
        android:id="@+id/imvPhoto"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_foreground" />
    <!--    <Button-->
    <!--        android:id="@+id/btnCapture"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Capture"-->
    <!--        android:textSize="22sp"-->
    <!--        android:backgroundTint="#00BCD4"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:drawableLeft="@drawable/baseline_camera_24"-->
    <!--        android:layout_marginTop="10dp"/>-->
    <Button
        android:id="@+id/btnGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:textSize="22sp"
        android:backgroundTint="#00BCD4"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/baseline_photo_library_24"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="22sp"
            android:backgroundTint="#00BCD4"
            android:layout_margin="4dp"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="22sp"
            android:backgroundTint="#FF0000"
            android:layout_margin="4dp"/>
    </LinearLayout>
</LinearLayout>